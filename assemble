# This batch file will DELETE files. Use at your own risk.
# Intended for developer's personal use.

# Encode logo
rm -f logo.bin
python3 logo-encode.py logo.png logo.bin

# Encode sprite CHR data
rm -f sprites.bin
python3 ../nes-util/nes_chr_encode.py sprites.png sprites.bin

# Assemble
asm6f paint.asm -L paint.nes

# Compress binaries
rm -f bin.zip
7z a -mx9 -bd -bso0 bin.zip *.bin *.nes

# Delete temporary files
rm logo.bin
rm sprites.bin

